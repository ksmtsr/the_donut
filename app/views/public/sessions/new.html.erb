<div class="form-wrapper">
  <h1>Sign in</h1>
<%= form_with model: @customer, url: session_path(resource_name), local: true do |f| %>
  <form>
    <div class="form-item">
      <td><%= f.email_field :email, :placeholder =>"メールアドレス",  autocomplete: "email" %></td>
    </div>
    <div class="form-item">
      <td><%= f.password_field :password, :placeholder =>"パスワード",  autocomplete: "current-password" %></td>
    </div>
    <div class="button-panel">
      <input type="submit" class="button" title="Sign In" value="Sign In"></input>
    </div>
  </form>
  <div class="form-footer">
    <p><%= link_to "Create an account", new_customer_registration_path %></p>
    <p><a href="#">Forgot password?</a></p>
    <% end %>